{
  "name": "@herbcaudill/agent-view-claude",
  "version": "1.1.0",
  "description": "Claude SDK adapter for @herbcaudill/agent-view",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "format": "prettier --write . --log-level silent"
  },
  "keywords": [
    "claude",
    "adapter",
    "agent-view"
  ],
  "author": "Herb Caudill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HerbCaudill/ralph.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@herbcaudill/agent-view": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.10.9",
    "prettier": "^3.5.3",
    "typescript": "~5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

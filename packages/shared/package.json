{
  "name": "@herbcaudill/ralph-shared",
  "version": "1.1.0",
  "description": "Shared utilities and types for Ralph CLI and UI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./prompts": {
      "types": "./dist/prompts/index.d.ts",
      "import": "./dist/prompts/index.js"
    }
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "format": "prettier --write . --log-level silent"
  },
  "keywords": [
    "ralph",
    "shared",
    "utilities"
  ],
  "author": "Herb Caudill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HerbCaudill/ralph.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@herbcaudill/agent-view": "workspace:*"
  },
  "devDependencies": {
    "@herbcaudill/beads-sdk": "^0.1.0",
    "@types/node": "^24.10.9",
    "prettier": "^3.5.3",
    "typescript": "~5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

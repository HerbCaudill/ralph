{
  "name": "ralph-monorepo",
  "private": true,
  "version": "0.8.5",
  "scripts": {
    "build": "pnpm -r build",
    "patch": "pnpm version patch --no-git-tag-version && pnpm -r exec pnpm version patch --no-git-tag-version",
    "minor": "pnpm version minor --no-git-tag-version && pnpm -r exec pnpm version minor --no-git-tag-version",
    "major": "pnpm version major --no-git-tag-version && pnpm -r exec pnpm version major --no-git-tag-version",
    "test": "pnpm -r test",
    "test:all": "pnpm --filter @herbcaudill/ralph test:all && pnpm --filter @herbcaudill/ralph-ui test:all",
    "format": "pnpm -r format",
    "cli": "pnpm --filter @herbcaudill/ralph ralph",
    "cli:build": "pnpm --filter @herbcaudill/ralph build",
    "cli:test": "pnpm --filter @herbcaudill/ralph test",
    "pub": "pnpm --filter @herbcaudill/ralph publish && pnpm --filter @herbcaudill/ralph-ui publish",
    "serve": "pnpm --filter @herbcaudill/ralph-ui dev:server",
    "ui": "pnpm --filter @herbcaudill/ralph-ui dev",
    "ui:build": "pnpm --filter @herbcaudill/ralph-ui build",
    "ui:test": "pnpm --filter @herbcaudill/ralph-ui test",
    "dev": "node scripts/dev.js",
    "storybook": "pnpm --filter @herbcaudill/ralph-ui storybook"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.5.3"
  }
}

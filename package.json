{
  "name": "@herbcaudill/ralph",
  "version": "0.2.0",
  "description": "Autonomous AI iteration engine for Claude CLI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ralph": "./bin/ralph.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "ralph": "tsx src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "claude",
    "ai",
    "automation",
    "cli",
    "iteration",
    "autonomous"
  ],
  "author": "Herb Caudill",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HerbCaudill/ralph.git"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "ink": "^6.6.0",
    "ink-big-text": "^2.0.0",
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.8",
    "@vitest/ui": "^4.0.17",
    "ink-testing-library": "^4.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

{
  "name": "ralph-monorepo",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "benchmark": "node scripts/benchmark-tests.js",
    "build": "pnpm -r build",
    "cli": "tsx packages/cli/src/index.ts",
    "cli:build": "pnpm --filter ralph build",
    "cli:test": "pnpm --filter ralph test",
    "agent-demo:test": "pnpm --filter agent-demo test",
    "agent-server:test": "pnpm --filter agent-server test",
    "agent-view-claude:test": "pnpm --filter agent-view-claude test",
    "agent-view-codex:test": "pnpm --filter agent-view-codex test",
    "agent-view-theme:test": "pnpm --filter agent-view-theme test",
    "beads-demo:test": "pnpm --filter beads-demo test",
    "beads-server:test": "pnpm --filter beads-server test",
    "beads-view:test": "pnpm --filter beads-view test",
    "components:test": "pnpm --filter components test",
    "shared:test": "pnpm --filter ralph-shared test",
    "ui:test": "pnpm --filter ralph-ui test",
    "ui-deprecated:test": "pnpm --filter ralph-ui-deprecated test",
    "demo:agent": "node scripts/agent-demo.js",
    "demo:beads": "node scripts/beads-demo.js",
    "dev": "node scripts/dev.js",
    "format": "git diff --name-only HEAD --diff-filter=ACMR | xargs -r prettier --write --ignore-unknown --log-level silent",
    "postinstall": "pnpm --filter ralph-shared build",
    "pub": "pnpm --filter ralph publish && pnpm --filter ralph-ui publish",
    "ralph": "pnpm cli",
    "serve:agent": "pnpm --filter agent-server dev",
    "serve:beads": "pnpm --filter beads-server dev",
    "storybook:comp": "pnpm --filter components storybook",
    "storybook:agent": "pnpm --filter agent-view storybook",
    "storybook:beads": "pnpm --filter beads-view storybook",
    "test": "pnpm -r test",
    "test:all": "node scripts/lib/testAll.js",
    "test:pw": "node scripts/playwright.js",
    "test:pw:agent": "pnpm --filter agent-demo test:pw",
    "typecheck": "pnpm -r --parallel typecheck",
    "ui": "pnpm --filter ralph-ui dev",
    "version-major": "pnpm version major --no-git-tag-version && pnpm -r exec pnpm version major --no-git-tag-version",
    "version-minor": "pnpm version minor --no-git-tag-version && pnpm -r exec pnpm version minor --no-git-tag-version",
    "version-patch": "pnpm version patch --no-git-tag-version && pnpm -r exec pnpm version patch --no-git-tag-version"
  },
  "devDependencies": {
    "get-port": "^7.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsup": "^8.5.1"
  }
}

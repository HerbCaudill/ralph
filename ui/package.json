{
  "version": "0.8.5",
  "types": "./dist/server/index.d.ts",
  "type": "module",
  "scripts": {
    "typecheck": "tsc -b --noEmit",
    "test:watch": "vitest --watch",
    "test:pw:ui": "node ../scripts/playwright.js --ui",
    "test:pw:headed": "node ../scripts/playwright.js --headed",
    "test:pw": "node ../scripts/playwright.js",
    "test:all": "OUT=$(tsc -b --noEmit 2>&1) || { echo \"$OUT\"; exit 1; }; NO_COLOR=1 vitest run --reporter=dot --bail 1 --silent=passed-only && pnpm test:pw --max-failures=1",
    "test": "vitest run",
    "storybook": "storybook dev -p 6006",
    "preview": "vite preview",
    "prepublishOnly": "pnpm build",
    "format": "prettier --write . --log-level silent",
    "dev:server": "tsx server/main.ts",
    "dev": "vite --open",
    "dev:headless": "vite",
    "build-storybook": "storybook build",
    "build": "tsc -b && vite build && tsc -p tsconfig.server.json && cp -r server/prompts dist/server/"
  },
  "repository": {
    "url": "https://github.com/HerbCaudill/ralph.git",
    "type": "git"
  },
  "publishConfig": {
    "access": "public"
  },
  "name": "@herbcaudill/ralph-ui",
  "main": "./dist/server/index.js",
  "license": "MIT",
  "keywords": [
    "claude",
    "ai",
    "automation",
    "ui",
    "web",
    "iteration",
    "autonomous"
  ],
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/react": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "jsdom": "^27.4.0",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.17"
  },
  "description": "Web UI for Ralph - React frontend and server for the autonomous AI iteration engine",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.7",
    "@herbcaudill/ralph-shared": "workspace:*",
    "@mdxeditor/editor": "^3.52.3",
    "@openai/codex-sdk": "^0.87.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tabler/icons-react": "^3.36.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "commander": "^14.0.2",
    "express": "^5.2.1",
    "idb": "^8.0.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.21.0",
    "tailwind-merge": "^3.4.0",
    "ws": "^8.19.0",
    "zustand": "^5.0.10"
  },
  "bin": {
    "ralph-ui": "./bin/ralph-ui.js"
  },
  "author": "Herb Caudill"
}

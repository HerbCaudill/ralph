{
  "$schema": "./hotkeys.schema.json",
  "hotkeys": {
    "agentStart": {
      "key": "cmd+Enter",
      "description": "Start Ralph agent",
      "category": "Agent Control"
    },
    "agentStop": {
      "key": "ctrl+c",
      "description": "Stop Ralph agent",
      "category": "Agent Control"
    },
    "agentPause": {
      "key": "cmd+.",
      "description": "Pause/Resume Ralph agent",
      "category": "Agent Control"
    },
    "agentStopAfterCurrent": {
      "key": "cmd+shift+.",
      "description": "Stop after current task",
      "category": "Agent Control"
    },
    "toggleSidebar": {
      "key": "cmd+b",
      "description": "Toggle sidebar visibility",
      "category": "Navigation"
    },
    "focusSidebar": {
      "key": "cmd+1",
      "description": "Focus sidebar",
      "category": "Navigation"
    },
    "focusMain": {
      "key": "cmd+2",
      "description": "Focus main content",
      "category": "Navigation"
    },
    "focusTaskInput": {
      "key": "cmd+k",
      "description": "Focus quick task input",
      "category": "Navigation"
    },
    "focusChatInput": {
      "key": "cmd+l",
      "description": "Focus chat input",
      "category": "Navigation"
    },
    "cycleTheme": {
      "key": "cmd+shift+t",
      "description": "Cycle theme (system → light → dark)",
      "category": "Appearance"
    },
    "showHotkeys": {
      "key": "cmd+/",
      "description": "Show keyboard shortcuts",
      "category": "Help"
    },
    "toggleInputFocus": {
      "key": "Tab",
      "description": "Cycle focus through inputs (task/search/chat)",
      "category": "Navigation"
    },
    "toggleTaskChat": {
      "key": "cmd+j",
      "description": "Toggle task chat panel and focus input",
      "category": "Navigation"
    },
    "focusTaskChatInput": {
      "key": "cmd+3",
      "description": "Focus task chat input",
      "category": "Navigation"
    },
    "showCommandPalette": {
      "key": "cmd+;",
      "description": "Open command palette",
      "category": "Help"
    },
    "previousIteration": {
      "key": "cmd+[",
      "description": "Go to previous iteration",
      "category": "Navigation"
    },
    "nextIteration": {
      "key": "cmd+]",
      "description": "Go to next iteration",
      "category": "Navigation"
    },
    "latestIteration": {
      "key": "cmd+\\",
      "description": "Go to latest iteration",
      "category": "Navigation"
    },
    "focusSearch": {
      "key": "cmd+f",
      "description": "Focus task search",
      "category": "Navigation"
    },
    "previousWorkspace": {
      "key": "cmd+shift+[",
      "description": "Switch to previous workspace",
      "category": "Navigation"
    },
    "nextWorkspace": {
      "key": "cmd+shift+]",
      "description": "Switch to next workspace",
      "category": "Navigation"
    },
    "toggleToolOutput": {
      "key": "ctrl+o",
      "description": "Toggle tool output visibility",
      "category": "Navigation"
    },
    "newChat": {
      "key": "cmd+Backspace",
      "description": "New chat",
      "category": "Chat"
    },
    "previousTask": {
      "key": "ArrowUp",
      "description": "Select previous task",
      "category": "Navigation"
    },
    "nextTask": {
      "key": "ArrowDown",
      "description": "Select next task",
      "category": "Navigation"
    },
    "openTask": {
      "key": "Enter",
      "description": "Open selected task",
      "category": "Navigation"
    }
  }
}
